# NettyanMC Environment Variables
# Скопируйте этот файл в .env и настройте значения

# ============================================
# ИНТЕГРАЦИЯ С NETTYANWEB
# ============================================
# Этот проект использует Caddy из репозитория nettyanweb для HTTPS
# Убедитесь что:
# 1. Репозиторий nettyanweb развернут
# 2. Caddy в nettyanweb запущен
# 3. Сеть nettyan_ssl создана
# 4. В nettyanweb/Caddyfile добавлен конфиг для mc.nettyan.ru

# === PostgreSQL Database ===
POSTGRES_DB=minecraft_server
POSTGRES_USER=mcserver
POSTGRES_PASSWORD=StrongPass123!

# === Backend API ===
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
NODE_ENV=production

# === YooKassa Configuration ===
YOOKASSA_SHOP_ID=your_shop_id_from_yookassa
YOOKASSA_SECRET_KEY=your_secret_key_from_yookassa

# ВАЖНО: Измените на реальный домен после его покупки!
# Примеры: https://nettyan.ru, https://agicraft.ru
YOOKASSA_RETURN_URL=https://nettyan.ru/payment/success
YOOKASSA_WEBHOOK_URL=https://nettyan.ru/api/payment/webhook

# === RCON Configuration ===
RCON_PASSWORD=your_rcon_password_change_this

# === Minecraft Servers Memory (для itzg/minecraft-server) ===
SURVIVAL_MEMORY=10G
AI_RESEARCH_MEMORY=10G
LOBBY_MEMORY=2G
VELOCITY_MEMORY=1G
SURVIVALPLUS_MEMORY=12G

# === Frontend Configuration ===
# Для локальной разработки: http://localhost
# Для production с доменом: https://mc.nettyan.ru
FRONTEND_URL=http://localhost

# API URL для frontend (относительный путь работает через Caddy)
VITE_API_URL=/api

# === Timezone ===
TZ=Europe/Moscow

# === Production настройки (после настройки nettyanweb) ===
# Раскомментируйте после настройки nettyanweb Caddy:
#
# FRONTEND_URL=https://mc.nettyan.ru
# YOOKASSA_RETURN_URL=https://mc.nettyan.ru/payment/success
# YOOKASSA_WEBHOOK_URL=https://mc.nettyan.ru/api/payment/webhook
# NODE_ENV=production
